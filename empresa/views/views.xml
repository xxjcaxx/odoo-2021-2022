    <!-- Top menu item -->
    <menuitem name="Empresa" id="empresa.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu" id="empresa.menu_1" parent="empresa.menu_root"/>
    <!-- actions -->
    <menuitem name="Furgonetes" id="empresa.furgoneta_menu_1_list" parent="empresa.menu_1"
              action="empresa.furgoneta_action_window"/>
      <menuitem name="Viatges" id="empresa.viatge_menu_1_list" parent="empresa.menu_1"
              action="empresa.viatge_action_window"/>
      <menuitem name="Paquets" id="empresa.paquet_menu_1_list" parent="empresa.menu_1"
              action="empresa.paquet_action_window"/>
  </data>
</odoo>