    <!-- Top menu item -->

    <menuitem name="Negocity" id="negocity.menu_root" />

    <!-- menu categories -->

    <menuitem name="Game" id="negocity.cities" parent="negocity.menu_root" />
    <menuitem name="Clients" id="negocity.clients" parent="negocity.menu_root" />


